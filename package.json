{
  "name": "ngrx-course",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "build": "ng build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "backend": "json-server --watch db.json --port 5000 --delay=1000",
    "serve:fullstack": "concurrently \"npm run backend\" \"npm run serve\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.3",
    "@angular/cdk": "^11.2.2",
    "@angular/common": "~11.2.3",
    "@angular/compiler": "~11.2.3",
    "@angular/core": "~11.2.3",
    "@angular/forms": "~11.2.3",
    "@angular/material": "^11.2.2",
    "@angular/platform-browser": "~11.2.3",
    "@angular/platform-browser-dynamic": "~11.2.3",
    "@angular/router": "~11.2.3",
    "@ngneat/until-destroy": "^8.0.4",
    "@ngrx/data": "^11.0.1",
    "@ngrx/effects": "^11.0.1",
    "@ngrx/entity": "^11.0.1",
    "@ngrx/router-store": "^11.0.1",
    "@ngrx/store": "^11.0.1",
    "@ngrx/store-devtools": "^11.0.1",
    "ngrx-store-logger": "^0.2.4",
    "rxjs": "~6.6.6",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.2",
    "@angular/cli": "~11.2.2",
    "@angular/compiler-cli": "~11.2.3",
    "@angular/language-service": "~11.2.3",
    "@jest/globals": "^26.6.2",
    "@ngrx/schematics": "^11.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "codelyzer": "^6.0.1",
    "concurrently": "^6.0.0",
    "husky": "^4.3.8",
    "jasmine-marbles": "^0.8.1",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "jest-preset-angular": "^8.3.2",
    "jest-zone-patch": "0.0.10",
    "json-server": "^0.16.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "protractor": "~7.0.0",
    "ts-jest": "^26.5.2",
    "ts-node": "~9.1.1",
    "tslint": "~6.1.3",
    "typescript": "~4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit"
    }
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  }
}
